[hub]
        protocol = https
[user]
        name = AUTHORNAME
        email = AUTHOREMAIL
[credential]
        helper = GIT_CREDENTIAL_HELPER
[core]
        excludesfile = ~/.gitignore
        editor = vim
[alias]
        pl = pull
        cp = cherry-pick
        st = status -s
        cl = clone
        ci = commit
        cm = commit -m
        co = checkout
        br = branch
        df = diff --word-diff
        dc = diff --cached
        lg = log -p

[color]
        branch = auto
        diff = auto
        status = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red
        new = cyan
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[push]
        default = simple
